#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;cin >> t;
    while (t-->0){
        int n;cin >> n;
        int a[n],b[n];
        for (int i=0;i<n;i++){
cin >> a[i];
    }
        for (int i=0;i<n;i++){
cin >> b[i];
    }
   // write your code for sorting array a and b
    int sum=0;
    for (int i=0;i<n;i++){
        sum+= min(a[i],b[i]);
    }
    cout << sum << endl;
    }
	return 0;
}
